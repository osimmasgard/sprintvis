function run() {

    Promise.all([listOfUsers, listOfDone, listOfSwimLaneID]).then(function (values) {

        values[0].forEach(element => {
            $("ul.users").append(" <li id=" + element._id + ">" + JSON.stringify(element.fullName) + "</li>");
        });

        $("ul.users li").click(function () {
            $(this).append($("<span>" + $(this).attr("id") + "</span>"));
        });

        function getSwimlaneName(id) {
            return new Promise(function (res, rej) {
                values[2].forEach(elem => {
                    if (typeof (elem) != "undefined") {
                        if (elem.ID == id) {
                            //console.log("Found Swimlane", elem.Namn)
                            res(elem.Namn);
                        }
                    }
                });
            });
        };



        function getCollaborators(collabs) {
            return new Promise(function (res, rej) {
                // console.log("asdf", collabs)
                if (typeof (collabs) != "undefined") {
                    values[0].forEach(elem => {
                        collabs.find(function (element) {
                            if (elem._id === element.userId) {
                                //console.log("Resolving with", elem.fullName);
                                res(elem.fullName);
                            } else {
                                //console.log("Wrong name", elem.fullName);
                            }
                        })
                    })
                }
            });
        };





        function completeTasks() {
            return new Promise(function (res, rej) {
                let tasks = [];
                values[1].map(x => x.tasks).map(y => y.map(z => {
                    if (typeof (z.collaborators) != "undefined" && typeof (z.swimlaneId) != "undefined") {
                        // console.log("Now at", z.collaborators, z.swimlaneId);
                        getSwimlaneName(z.swimlaneId).then(function (elem) {
                            getCollaborators(z.collaborators).then(function (array) {
                                // console.log("pushing", array, elem)
                                tasks.push({
                                    "name": z.name,
                                    "collaborators": array,
                                    "swimlaneid": elem
                                });
                            })
                        })
                    }
                }))
                res(tasks);
            })
        }


        //let maps = values[1].concat(values[1].tasks);
        console.log("Promises", completeTasks());
        var tjola = completeTasks()
        console.log("Tjola", tjola);

        tjola.then(function (arr) {
            console.log("ARRRRR", arr, arr.length);
            arr.then(function (as) {
                as.forEach(element => {
                    console.log("elem", element);
                    element
                    $("ol.tasks").append(" <li>" + JSON.stringify(element) + "</li>");
                })
            })
        });
    });
};




$(document).ready(run());